.atributesContainer {
    max-width: 100%;
    max-height: 25%;
    flex-direction: row;
    flex-wrap: nowrap;
    min-height: 25%;
    min-width: 100px;
}

.atribute {
    max-width: 25%;
    max-height: 100%;
    min-width: 25%;
    min-height: 100%;
}

.atribute:hover {
    max-width: 30%;
    max-height: 105%;
    min-width: 30%;
    min-height: 105%;
}

.semi-transparent {
    -unity-background-image-tint-color: rgba(255, 255, 255, 0.5);
}
